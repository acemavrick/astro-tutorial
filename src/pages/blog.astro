---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const pageTitle = 'Blog';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<base href={import.meta.env.BASE_URL + "/"} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<Navigation currentPage={pageTitle} />

		<h1>{pageTitle}</h1>
		<h2>Hello user. This is the blog page located at /blog.</h2>
        <h3>To go home, remove <code>/blog</code> off the end of the url
        in the address bar.</h3>
        <p>I am working through Astro's introductory tutorial, and this is my blog page.</p>

		<p class="font-bold rounded
		py-0.5 px-1.5 bg-red-200">ALL THESE POSTS ARE AI GENERATED.</p>

        <h2>Posts</h2>
        <ul class="space-y-2 mt-4 list-disc pl-5">
            <li><a href="posts/post-1" class="text-blue-300 hover:underline transition-colors duration-300">Post 1</a></li>
            <li><a href="posts/post-2" class="text-blue-300 hover:underline transition-colors duration-300">Post 2</a></li>
            <li><a href="posts/post-3" class="text-blue-300 hover:underline transition-colors duration-300">Post 3</a></li>
            <li><a href="posts/post-4" class="text-blue-300 hover:underline transition-colors duration-300">Post 4</a></li>
        </ul>
	</body>
	<Footer />
</html>
